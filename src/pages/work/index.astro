---
import PostListing from "../../components/blog/PostListing.astro";
import ListLayout from "../../layouts/ListLayout.astro";

const posts = await Astro.glob("../../posts/work/*.{md,mdx}");
const nonDraftPosts = posts.filter((post) => !post.frontmatter.draft);
---

<ListLayout title="Privater Kram von Leonid" area="work">
  <PostListing posts={nonDraftPosts} path="/work" />
</ListLayout>
